# Spotify API Credentials
# Get from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8888/callback

# Genius API Key
# Get from: https://genius.com/api-clients
GENIUS_API_KEY=your_genius_api_key_here

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cohere API Key
# Get from: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=your_cohere_api_key_here

# Qdrant Configuration (Local by default)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_USE_CLOUD=false

# For Qdrant Cloud (optional)
# QDRANT_HOST=your-cluster-url.qdrant.io
# QDRANT_API_KEY=your_qdrant_api_key
# QDRANT_USE_CLOUD=true
